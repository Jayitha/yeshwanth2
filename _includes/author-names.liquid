{% assign author_names = "" %}
{% for author in item.author %}
{% if forloop.first %}
{% assign author_names = author.given | append: " " | append: author.family %}
{% else %}
{% assign author_names = author_names | append: ", " | append: author.given | append: " " | append: author.family %}
{% endif %}
{% endfor %}
{{- author_names | strip -}}